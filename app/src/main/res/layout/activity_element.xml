<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ElementActivity">

    <TextView
        android:id="@+id/addressLabel"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_marginTop="32dp"
        android:text="@string/addressLabel"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/telephoneLabel"
        app:layout_constraintTop_toBottomOf="@+id/telephoneLabel" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_marginTop="32dp"
        android:text="@string/addressText"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/telephoneText"
        app:layout_constraintTop_toBottomOf="@+id/telephoneText" />

    <TextView
        android:id="@+id/telephoneLabel"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="150dp"
        android:text="@string/telephoneLabel"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameTxet" />

    <TextView
        android:id="@+id/telephoneText"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:text="@string/telephoneText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/telephoneLabel"
        app:layout_constraintTop_toTopOf="@+id/telephoneLabel" />

    <TextView
        android:id="@+id/nameTxet"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="640dp"
        android:text="@string/nameText"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/callButton"
        android:onClick="onCallClick"
        app:layout_constraintStart_toStartOf="@+id/addressText"
        app:layout_constraintTop_toTopOf="@+id/toMapButton" />

    <Button
        android:id="@+id/toMapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/toMapButton"
        android:onClick="onMapClick"
        app:layout_constraintStart_toStartOf="@+id/addressLabel"
        app:layout_constraintTop_toBottomOf="@+id/addressLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>